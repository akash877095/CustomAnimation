<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/black_outline"
        android:text="3GB Data"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/vvLine"
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@color/gray44"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toEndOf="@+id/tvTitle"
        app:layout_constraintTop_toTopOf="@+id/tvTitle" />

    <Button
        android:id="@+id/btReload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Reload"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/vvLine"
        app:layout_constraintStart_toEndOf="@+id/vvLine"
        app:layout_constraintTop_toTopOf="@+id/vvLine" />

    <Button
        android:id="@+id/bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Transfer"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/btReload"
        app:layout_constraintStart_toEndOf="@+id/btReload"
        app:layout_constraintTop_toTopOf="@+id/btReload" />

</androidx.constraintlayout.widget.ConstraintLayout>